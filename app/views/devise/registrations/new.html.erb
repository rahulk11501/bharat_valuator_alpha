<div class="flex justify-center items-center min-h-screen bg-gray-100 dark:bg-gray-900 transition-colors duration-300">
  <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-md w-full max-w-md">
    <h2 class="text-2xl font-bold mb-6 text-center text-gray-900 dark:text-gray-100">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        <%= f.email_field :email, autofocus: true, class: "mt-1 block w-full rounded-md border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 shadow-sm focus:ring focus:ring-indigo-300" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        <%= f.password_field :password, class: "mt-1 block w-full rounded-md border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 shadow-sm focus:ring focus:ring-indigo-300" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        <%= f.password_field :password_confirmation, class: "mt-1 block w-full rounded-md border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 shadow-sm focus:ring focus:ring-indigo-300" %>
      </div>

      <div class="mb-4">
        <%= f.submit "Sign up", class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white py-2 rounded-md transition" %>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <%= link_to "Log in", new_user_session_path, class: "text-indigo-600 hover:underline dark:text-indigo-400" %>
    </div>
  </div>
</div>
